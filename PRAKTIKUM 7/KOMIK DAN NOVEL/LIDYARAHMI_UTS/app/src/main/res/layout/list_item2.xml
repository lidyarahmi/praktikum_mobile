<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/title_image2"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/sijuki" />

        <TextView
            android:id="@+id/heading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/title_image2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3sp"
            android:text="Tahilalats"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subheading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/heading2"
            android:layout_toEndOf="@id/title_image2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3sp"
            android:text="ini sub heading"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/detail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subheading2"
            android:layout_toEndOf="@id/title_image2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3sp"
            android:text="Genre"
            android:textColor="#3C3D5C"
            android:textSize="14sp"
            android:textStyle="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/title_image2"
            android:layout_marginTop="8dp"
            android:background="@color/underline" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
